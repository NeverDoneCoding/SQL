-- Replace 'Your Scan Policy Name' with the actual name of the scan policy
SELECT
    a.ip_address AS "Asset IP",
    a.hostname AS "Asset Name",
    s.policy_name AS "Scan Policy",
    sc.compliance_status AS "Compliance Status",
    sc.compliance_score AS "Compliance Score"
FROM
    asset a
    JOIN scan s ON a.asset_id = s.asset_id
    JOIN scan_compliance sc ON s.scan_id = sc.scan_id
WHERE
    s.policy_name = 'Your Scan Policy Name'
ORDER BY
    sc.compliance_score ASC;
